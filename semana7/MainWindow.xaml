<Window x:Class="semana7.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:semana7"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Button Content="List Customers" Click="boton_1" HorizontalAlignment="Left" Margin="105,352,0,0" VerticalAlignment="Top"/>
        <DataGrid x:Name="dgCustomers" Margin="27,66,262,235"></DataGrid>
        <TextBox x:Name="txtName" HorizontalAlignment="Left" Margin="282,235,0,0" TextWrapping="Wrap" Text="Name" VerticalAlignment="Top" Width="120" />
        <TextBox x:Name="txtAddress" HorizontalAlignment="Left" Margin="516,235,0,0" TextWrapping="Wrap" Text="Address" VerticalAlignment="Top" Width="120"/>
        <CheckBox x:Name="chkActive" Content="Active" HorizontalAlignment="Left" Margin="516,308,0,0" VerticalAlignment="Top" Width="120"/>
        <TextBox x:Name="txtPhone" HorizontalAlignment="Left" Margin="282,308,0,0" TextWrapping="Wrap" Text="Phone" VerticalAlignment="Top" Width="120"/>
        <Button Content="Insertar" HorizontalAlignment="Left" Margin="282,352,0,0" VerticalAlignment="Top" Click="boton_insertar"/>
    </Grid>
</Window>
